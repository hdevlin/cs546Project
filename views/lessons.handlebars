<body onload="changeDifficultyText(); setup();">
    <ul class="navbar">
        <li><a href="/">Dashboard</a></li>
        <li><a href="/lessons">Browse Lessons</a></li>
        <li><a href="/profile">My Profile</a></li>
    </ul>

    <div class="jumbotron text-center">
        <h1>Browse Lessons</h1>
    </div>

    <main>
    <div class="container">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col"><h3>Topic</h3></th>
                    <th scope="col"><h3>Lesson</h3></th>
                    <th scope="col"><h3>Potential Badges</h3></th>
                    <th scope="col"><h3>Try It</h3></th>
                </tr>
            </thead>
            <tbody>

            <!--
                Populate using request body
            -->
            {{#each reqbody}}
            <tr>
                <td class="left-col">{{subject}}</td>
                <td class="left-col">{{title}}
                    <ul>
                        <li class="diff">{{difficulty}}</li>
                        <li>{{questions.length}} questions</li>
                    </ul>
                </td>
                <td>
                    {{#each badges}}
                    <img class="badge-icon rounded-circle" title="{{name}}" src="/public/images/{{file}}">
                    {{/each}}
                </td>
                <td><a id="{{_id}}" class="btn btn-success open-lesson">Start</a></td>
            </tr>
            {{/each}}

            </tbody>
        </table>

    </div>
    </main>

    <br>
    <footer>Copyright &copy; 2020 Quizzo</footer>
</body>